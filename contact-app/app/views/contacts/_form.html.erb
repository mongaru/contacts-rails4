<%= form_for @contact, :html => {:class => 'form-horizontal', 'data-bar' => 'baz'} do |f| %>
  <% if @contact.errors.any? %>
    <div class="bg-danger col-sm-12">
        <p><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</p>
        <ul>
          <% @contact.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
     </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nombre, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :nombre, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :apellido, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :apellido, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :apodo, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :apodo, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :telefono, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :telefono, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :email, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :direccion, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :direccion, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :simplefile, :class => "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.file_field :simplefile, :class => "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit :class => "btn btn-primary", :label => "Guardar" %>
    </div>
  </div>

<% end %>
