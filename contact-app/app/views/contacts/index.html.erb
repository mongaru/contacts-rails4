<div class="container">

    <h1 id="helper-classes" class="page-header">Contacts</h1>

    <%= link_to 'New Contact', new_contact_path, :class => "btn btn-info" %>

    <table class="table table-striped">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Last Name</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
        <% @contacts.each do |contact| %>
            <tr>
                <th scope="row"><%= contact.id %></th>
                <td><%= contact.nombre %></td>
                <td><%= contact.apellido %></td>
                <td>
                  <%= link_to 'Show', contact, :class => "btn btn-success" %> / 
                  <%= link_to 'Edit', edit_contact_path(contact), :class => "btn btn-warning" %> / 
                  <%= link_to 'Destroy', contact, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
                </td>
            </tr>
        <% end %>
    </tbody>
    </table>

</div> <!-- /container -->

